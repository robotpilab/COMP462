<?xml version="1.0"?>
<robot name="myfirst">

   <link name="stick_link">
      <visual>
         <geometry>
            <box size="0.01 0.01 0.2"/>
         </geometry>
         <material name="panda_white"/>
      </visual>
      <collision>
         <geometry>
            <box size="0.01 0.01 0.2"/>
         </geometry>
      </collision>
   </link>

   <link name="end_link">
      <visual>
         <geometry>
            <sphere radius="0.02"/>
         </geometry>
         <material name="panda_white"/>
      </visual>
      <collision>
         <geometry>
            <sphere radius="0.02"/>
         </geometry>
      </collision>
   </link>

   <joint name="stick_joint" type="fixed">
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <parent link="stick_link"/>
      <child link="end_link"/>
   </joint>

</robot>

